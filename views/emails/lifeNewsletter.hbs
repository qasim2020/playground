{{> header}}

{{#each data.body}}

      {{#if (match 'h1' type)}}

        <h1 style="
        background: #219653;
        padding: 7px 10px;
        width: fit-content;
        color: white !important;
        font-size: 21px !important;
        transform: rotate( -1deg);
        margin: 0px 0 25px 0;
            ">{{{msg}}}</h1>

      {{/if}}

      {{#if (match 'h3' type)}}

        <h3 style="
        padding: 7px 10px;
        width: fit-content;
        color: #4F4F4F !important;
        font-size: 19px !important;
        margin: 0px 0 25px 0;
        border-radius: 5px;
            ">{{{msg}}}</h3>

      {{/if}}

      {{#if (match 'p' type)}}

        <p style="
                font-size: 17px;
                line-height: 1.7;
                color: #333333;
                word-break: break-word;
                ">{{{msg}}}</p>

      {{/if}}

      {{#if (match 'img' type)}}

          <img style="
            width: 100%;
            margin-bottom: 32px;
            border: 1px solid whitesmoke;
            border-radius: 5px;
          " src="https://res.cloudinary.com/miscellaneous/image/upload/v1592022597/qurandaily/{{{msg}}}" alt="">

      {{/if}}

      {{#if (match 'quote' type)}}
          <p class="quote" style="
              font-size: 17px;
              line-height: 1.9;
              font-style: italic;
        ">
          {{{msg}}}
        </p>
      {{/if}}

{{/each}}

{{> footer url=data.url email=data.email Id=data.Id}}
