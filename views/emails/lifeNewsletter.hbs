{{> header}}

{{#each data.body}}

      {{#if (match 'h1' type)}}
        <h1 style="
        font-family: 'Roboto', sans-serif;
        background: #219653;
        padding: 7px 10px;
        width: fit-content;
        color: white !important;
        font-size: 21px !important;
        transform: rotate( -1deg);
        margin: 0px 0 25px 0;
        ">{{{msg}}}</h1>
      {{/if}}

      {{#if (match 'announcement' type)}}

          <p class="announcement" style="
            font-family: 'Roboto', sans-serif;
            padding: 5px;
            color: #333333;
            font-size: 15px;
            font-style: italic;
            line-height: 1.5;
            background: lightyellow;
            border-radius: 5px;
          ">{{{msg}}}</p>

      {{/if}}

      {{#if (match 'h3' type)}}
        <h3 style="
        font-family: 'Roboto', sans-serif;
        background: {{pickRandomColor @index}};
        padding: 7px 10px;
        width: fit-content;
        color: #4F4F4F !important;
        font-size: 19px !important;
        margin: 25px 0 25px 0;
        border-radius: 5px;
        ">{{{msg}}}</h3>
      {{/if}}

      {{#if (match 'p' type)}}
        <p style="
                font-family: 'Roboto', sans-serif;
                font-size: 17px;
                line-height: 1.7;
                color: #333333;
                word-break: break-word;
                ">{{{msg}}}</p>
      {{/if}}

      {{#if (match 'bullet' type)}}

          <p class="bullet" style="
            font-family: 'Roboto', sans-serif;
            display: flex;
            line-height: 1.7;
            color: #333333;
            font-size: 17px;
            ">

          <span style="
              font-family: 'Roboto', sans-serif;
              padding: 0px 15px 0 5px;
          ">â€¢</span>{{{msg}}}
          
          </p>

      {{/if}}

      {{#if (match 'text' type)}}

          {{{msg}}}

      {{/if}}

      {{#if (match 'img' type)}}
          <img style="
            font-family: 'Roboto', sans-serif;
            width: 100%;
            border: 1px solid whitesmoke;
            border-radius: 5px;
            margin: auto;
          " src="https://res.cloudinary.com/miscellaneous/image/upload/v1592022597/qurandaily/{{{msg}}}" alt="">
      {{/if}}

      {{#if (match 'captionO' type)}}
        <p style="
                font-family: 'Roboto', sans-serif;
                margin-bottom: 40px;
                font-size: 15px;
                text-align: center;
                line-height: 1.7;
                color: #333333 !important;
                word-break: break-word;
                ">{{{msg}}}
      {{/if}}

      {{#if (match 'po' type)}}
        <p style="
                font-family: 'Roboto', sans-serif;
                font-size: 17px;
                line-height: 1.7;
                color: #333333;
                word-break: break-word;
                ">{{{msg}}}
      {{/if}}

      {{#if (match 'a' type) }}

          <p style="
            font-family: 'Roboto', sans-serif;
            font-size: 17px;
            line-height: 1.7;
            color: #333333;
            word-break: break-word;
            " >

              <a style="
                font-family: 'Roboto', sans-serif;
                text-decoration: none;
                color: indianred;
                font-style: italic;
                padding-bottom: 9px;
                " href="{{{msg}}}">
                  {{{class}}}
              </a>
          
          </p>

      {{/if}}

      {{#if (match 'ao' type)}}

          <a style="
            font-family: 'Roboto', sans-serif;
            text-decoration: none;
            color: indianred;
            font-style: italic;
            padding-bottom: 9px;
          " href="{{{msg}}}">{{{class}}}

      {{/if}}

      {{#if (match 'quote' type)}}
          <p class="quote" style="
                font-family: 'Roboto', sans-serif;
                line-height: 1.9;
                font-style: italic;
                font-size: 17px;
                color: #333333;
              "> {{{msg}}}</p>
      {{/if}}


      {{#if (match "ao/" type) }} {{{msg}}} </a> {{/if}}
      {{#if (match "po/" type) }} {{{msg}}}</p> {{/if}}
      {{#if (match "captionO/" type) }} {{{msg}}}</p> {{/if}}
{{/each}}

{{> footer url=data.url email=data.email Id=data.Id}}
