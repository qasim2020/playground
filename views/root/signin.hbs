<html>

<head>

    <title>Sign In</title>

    <style type="text/css">

        .container {
            max-width: 800px;
            display: flex;
            }

        form > * {
            display: block;
            margin-bottom: 10px;
            padding: 5px;
        }

        .d-none {
            display: none;
        }
    </style>

</head>

<body>

    <nav>

        <a href="/root/admin/page/showCollection/root-users">show Collections</a>
    
    </nav>

    <div class="container">

        <form action="" method="post">

            <label for="email">Email</label>
            <input name="email" type="email" value="" required=true>
            
            <label for="password">Password</label>
            <input name="password" type="password" id="password" placeholder="Write your password here" required=true>

            <button id="submitButton" type="submit">Submit</button>

        </form>

    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>

    <script>

        $('form').on('submit',function(e) {
            e.preventDefault();
            console.log($(this).serialize());
            $.ajax({
              type: "POST",
              url: '/root/gen/data/checkSignIn/n',
              data: $(this).serialize(),
              success: (data) => {
                console.log('successful data sent'),
                console.log(data);
                $('#submitButton').html(data);
                window.location.href = '/root/admin/page/showCollection/root-users';
              }
            });
        });

        // label: name, type: String

    </script>

</body>

</html>
