<html>

<head>

    <title>Edit Document</title>

    <style type="text/css">

        .container {
            max-width: 800px;
            display: flex;
            }

        form > * {
            display: block;
            margin-bottom: 10px;
            padding: 5px;
        }

        .d-none {
            display: none;
        }
    </style>

</head>

<body>

    <nav>

        <a href="/root/admin/page/showCollection/{{data.collection}}">{{data.collection}}</a>
    
    </nav>

    <div class="container">

        <form action="" method="post">

            <input name="modelName" type="text" class="d-none" value="{{data.collection}}">

        {{#each data}}

            {{#if (matchValues this.type 'input')}}
                <label for="{{name}}">{{this.label}}</label>
                <input name="{{this.name}}" type="text" id="{{this.id}}" placeholder="" required="{{matchValues this.required required}}">
            {{/if}}

        {{/each}}

        <button id="submitButton" type="submit">Submit</button>

        </form>

    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>

    <script>

        $('form').on('submit',function(e) {
            e.preventDefault();
            console.log($(this).serialize());
            $.ajax({
              type: "POST",
              url: '/root/admin/data/saveSequence/n',
              data: $(this).serialize(),
              success: (data) => {
                console.log('successful data sent'),
                console.log(data);
                $('#submitButton').html(data.error);
              }
            });
        });

        // label: name, type: String

    </script>

</body>

</html>
