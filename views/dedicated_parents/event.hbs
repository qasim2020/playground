<!DOCTYPE html>
<!--[if lt IE 7]> <html class="no-js lt-ie9 lt-ie8 lt-ie7" lang="en"> 
<![endif]-->
<!--[if IE 7]> <html class="no-js lt-ie9 lt-ie8" lang="en"> 
<![endif]-->
<!--[if IE 8]> <html class="no-js lt-ie9" lang="en"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js" lang="en"> <!--<![endif]-->
    <head>
        <title>{{this.output.title}}</title>
        {{> dedicated_parents/header}}
    </head>
    <body>

        {{> dedicated_parents/headerNav active='events'}}

		<div class="container">
			
			<div class="page-header">
				<div class="row">
					<div class="col-md-6 col-sm-6">
                                                <h2 class="page-title">{{this.output.title}}</h2>
					</div> <!-- /.col-md-6 -->
					<div class="col-md-6 col-sm-6 hidden-xs back-home">
						<a href="/">&larr; Go back Home</a>
					</div> <!-- /.col-md-6 -->
				</div> <!-- /.row -->
			</div> <!-- /.page-header -->

			<div class="row">
				
				<div class="col-md-8">
					<div class="event-single">
						<div class="event-image">
                                                        <img src="https://res.cloudinary.com/miscellaneous/image/upload/c_lpad,h_400,w_770/v1680079430/dedicatedparents/event-banners/{{data.output.bannerImg}}" alt="">
							<div class="img-date">
                                                            <span class="month">{{getMonth data.output.date}}</span>
                                                            <span class="day">{{getDay data.output.date}}</span>
                                                            <span class="year">{{getYear data.output.date}}</span>
							</div> <!-- /.img-date -->
						</div> <!-- /.event-image -->
						<div class="event-content">
                                                        <h3>{{data.output.title}}</h3>
                                                        <p>{{data.output.detail}}</p>
							<div class="space-s"></div>
							<div class="row">
								<div class="col-md-6 col-sm-6">
									<div class="event-map" style="height: 260px;"></div> <!-- /.event-map -->
								</div> <!-- /.col-md-6 -->
								<div class="col-md-6 col-sm-6">
									<ul class="event-info">
                                                                <li><span>Date:</span>{{data.output.date}}</li>
                                                                <li><span>Time:</span>{{data.output.time}}</li>
                                                          <li><span>Event Type:</span>{{data.output.type}}</li>
                                                          <li><span>Contact:</span> {{data.output.phone}} </li>
                                                          <li>
                                                              <span></span>
                                                              <a href="mailto:{{data.output.email}}">{{data.output.email}}</a>
                                                          </li>
									</ul>
								</div> <!-- /.col-md-6 -->
							</div> <!-- /.row -->
						</div> <!-- /.event-content -->
					</div> <!-- /.event-single -->
					<div class="row">
					</div> <!-- /.row -->
				</div> <!-- /.col-md-8 -->

				<div class="col-md-4">
                                    {{> dedicated_parents/galleryPhotos}}
                                    {{> dedicated_parents/upcomingEvents}}
				</div> <!-- /.col-md-4 -->

			</div> <!-- /.row -->

		</div> <!-- /.container -->

        {{> dedicated_parents/footer}}

		<!-- Google Map -->
        <script src="http://maps.google.com/maps/api/js?sensor=true"></script>
        <script src="/dedicated_parents/js/vendor/jquery.gmap3.min.js"></script>
        
        <!-- Google Map Init-->
        <script type="text/javascript">
            jQuery(function($){
                $('.event-map').gmap3({
                    marker:{
                        address: '16.8496189,96.1288854' 
                    },
                        map:{
                        options:{
                        zoom: 15,
                        scrollwheel: false,
                        streetViewControl : true
                        }
                    }
                });
            });
        </script>

    </body>
</html>
