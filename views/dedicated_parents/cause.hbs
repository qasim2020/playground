<!--[if gt IE 8]><!--> <html class="no-js" lang="en"> <!--<![endif]-->
    <head>
        <title>Dedicated Parents | Cause</title>
        {{> dedicated_parents/header}}
    </head>
    <body>

        {{> dedicated_parents/headerNav active='causes'}}

		<div class="container">
			
			<div class="page-header">
				<div class="row">
					<div class="col-md-6 col-sm-6">
                                            <h2 class="page-title">{{data.cause.title}}</h2>
					</div> <!-- /.col-md-6 -->
					<div class="col-md-6 col-sm-6 hidden-xs back-home">
						<a href="/dedicated_parents/gen/page/landingPage/n">&larr; Go back Home</a>
					</div> <!-- /.col-md-6 -->
				</div> <!-- /.row -->
			</div> <!-- /.page-header -->

			<div class="row">
				
				<div class="col-md-8">
					<div class="cause-single">
						<div class="cause-image">
							<a href="donate.html" class="btn main-btn visible-xs">Donate Now</a>
<img src="https://res.cloudinary.com/miscellaneous/image/upload/c_lpad,h_410,w_710/{{data.cause.number}}/dedicatedparents/causes-photos/{{data.cause.imgSlug}}" alt="">
							<div class="cause-overlay hidden-xs">
								<div class="overlay-inner">
                                                                    <span class="meta-date"><i class="fa fa-calendar-o"></i>{{data.cause.date}}</span>
                                                                    <span class="meta-author"><i class="fa fa-user"></i>{{data.cause.author}}</span>
                                                                    <span class="price">Target: <br> {{data.cause.target}}</span>
								</div>
							</div> <!-- /.cause-overlay -->
						</div> <!-- /.cause-image -->
						<div class="cause-content">
							<div class="cause-holder-list clearfix">
								<div class="progress">
                                                                    <div class="progress-bar" role="progressbar" aria-valuenow="{{data.cause.percent}}" aria-valuemin="0" aria-valuemax="100" style="width: {{data.cause.percent}}%;"></div>
								</div>
                                                                <span class="raised pull-left">{{data.cause.raised}}</span>
                                                                <span class="goal pull-right">{{data.cause.target}}</span>
							</div> <!-- /.cause-holder-list -->
                                                        <span class="meta-cause visible-xs">{{data.cause.date}} by {{data.cause.author}}</span>
                                                        <h3 class="cause-title">{{data.cause.title}}</h3>
                                                        {{{data.cause.detail}}}
						</div> <!-- /.cause-content -->
					</div> <!-- /.cause-single -->
				</div> <!-- /.col-md-8 -->

				<div class="col-md-4">

                                <!-- /.box-content -->
                                {{> dedicated_parents/galleryPhotos}}
                                {{> dedicated_parents/upcomingEvents}}
                                <!-- /.box-content -->

				</div> <!-- /.col-md-4 -->

			</div> <!-- /.row -->

		</div> <!-- /.container -->

		
                {{> dedicated_parents/footer}}

    </body>
</html>
