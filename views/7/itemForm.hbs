<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title></title>
  <style media="screen">
    form > * {
      display: block;
    }
  </style>
</head>

<body>
  <form class="" action="/{{required_action}}" method="post">

    {{#if _id}}

      <label for="id">Id</label>
      <input type="text" name="id" value="{{_id}}">

    {{/if}}

    <label for="name">Name</label>
    <input type="text" name="name" value="{{name}}">

    <label for="school">Choose a School:</label>
    <select name="school">
      {{#each schoolsList}}
        <option value="{{this.name}}" {{this.selected}}>{{this.name}}</option>
      {{/each}}
    </select>

    <label for="cost">Cost</label>
    <input type="text" name="cost" value="{{cost}}">

    <label for="size">size</label>
    <input type="text" name="size" value="{{size}}">

    <label for="qty">Quantity</label>
    <input type="text" name="qty" value="{{qty}}">

    <button type="submit" name="button">Submit</button>
  </form>
</body>

</html>
