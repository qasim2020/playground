<html>

<head>

    <title>Sign Up</title>

    <style type="text/css">

    .items {
        display: grid;
        grid-template-columns: repeat(6,1fr);
        grid-gap: 10px;
    }

    .items div {
        border: 1px solid grey;
        border-radius: 7px;
        padding: 9px;
    }

    .items img {
        width: 100%;
        height: auto;
        box-sizing: border-box;
        border-radius: 11px;
    }

    </style>

</head>

<body>

    <nav>

        <p><img src="{{data.resources.[0].logo}}" height="44"></p>

        <div>
            <a href="/{{data.brand}}/gen/page/aboutPage/n">Sign In</a>
            <a href="/{{data.brand}}/gen/page/cartPage/n">Cart</a>
        </div>
    
    </nav>

    <div class="container">

        <p><input type='text' placeholder='Type something here...' value=''></p>

        <p>
        {{#each data.schools}}
            <span>{{this.name}}<span>
        {{/each}}
        </p>

        <p><span>Categories</span>
        {{#each data.categories}}
            <span>{{this}}</span>
        {{/each}}
        </p>

        <section class='items'>
            {{#each data.items}}
            <div>
                <img src="{{this.imageLink.[1]}}" height="300">
                <p> {{this.name}} </p>
                <p> PKR - {{this.sellingCost}} </p>
            </div>
            {{/each}}
        </section>
    
    </div>

    <div class="footer">
        <p> Footer Items </p>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>

    <script>


    </script>

</body>

</html>
