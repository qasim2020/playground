<html>

<head>

    <title>{{data.brand}}</title>

    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400;500&display=swap" rel="stylesheet">

    <style type="text/css">

    body {
        font-family: 'Roboto', sans-serif;
        color: #828282;
        margin: 0px;
    }

    nav {
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    nav, .container {
        margin: 0 8px;
    }

    .container {
        margin-bottom: 10px;
    }

    nav a, span {
        padding: 2px 11px;
        border-radius: 5px;
        border: 1px solid #F2F2F2;
        text-decoration: none;
        color: #828282;
    }

    .searchP {
        border: 1px solid #E0E0E0;
        border-radius: 5px;
    }

    .searchP > input::placeholder {
        color: #828282;
    }

    .searchP > input {
        width: 100%;
        padding: 16px 9px;
        font-size: 17px;
        color: black;
        border: 0px;
        border-radius: 5px;
    }

    .items {
        display: grid;
        grid-template-columns: repeat(6,1fr);
        grid-gap: 10px;
    }

    .items >  div {
        border: 1px solid #F2F2F2;
        border-radius: 7px;
        padding: 9px;
    }

    .items img {
        width: 100%;
        height: auto;
        box-sizing: border-box;
    }

    .imageCarrier {
        height: 197px;
        overflow: hidden;
        display: flex;
        align-items: flex-end;
        justify-content: center;
    }

    .item {
        position: relative;
    }

    .item > p.name {
        color: #4F4F4F;
        font-size: 17px;
        font-weight: bold;
    }

    .item > p.cost {
        font-weight: 300;
        font-size: 13px;
    }

    .item > svg {
        position: absolute;
        right: 10px;
        bottom: 20px;
    }

    .footer {
        height: 270px;
        background: #D94A46;
        color: white;
        padding: 8px;
    }

    </style>

</head>

<body>

    <nav>

        <p><img src="{{data.resources.[0].logo}}" height="44"></p>

        <div>
            <a href="/{{data.brand}}/gen/page/aboutPage/n">Sign In</a>
            <a href="/{{data.brand}}/gen/page/cartPage/n">Cart</a>
        </div>
    
    </nav>

    <div class="container">

        <p>
        {{#each data.schools}}
            <span>{{{this.name}}}</span>
        {{/each}}
        </p>

        <p class="searchP"><input type='text' placeholder='Type something here...' value=''></p>

        <p>
        {{#each data.categories}}
            <span>{{this.name}}</span>
        {{/each}}
        </p>

        <section class='items'>
            {{#each data.items}}
            <div class="item">
                <div class='imageCarrier'>
                    <img src="{{this.imgURL.[0]}}" height="300">
                </div>
                <p class="name"> {{this.name}} </p>
                <p class="cost"> PKR - {{this.cost}} </p>
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M13 7H11V11H7V13H11V17H13V13H17V11H13V7ZM12 2C6.48 2 2 6.48 2 12C2 17.52 6.48 22 12 22C17.52 22 22 17.52 22 12C22 6.48 17.52 2 12 2ZM12 20C7.59 20 4 16.41 4 12C4 7.59 7.59 4 12 4C16.41 4 20 7.59 20 12C20 16.41 16.41 20 12 20Z" fill="#4F4F4F"/>
                </svg>

            </div>
            {{/each}}
        </section>
    
    </div>

    <div class="footer">
        <p> Footer Items </p>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>

    <script>


    </script>

</body>

</html>
