<html>

<head>

    <title>{{data.brand}}</title>

    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400;500&display=swap" rel="stylesheet">

    <style type="text/css">

    body {
        font-family: 'Roboto', sans-serif;
    }

    nav {
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    nav a, span {
        padding: 2px 11px;
        border-radius: 5px;
        border: 1px solid #F2F2F2;
        text-decoration: none;
        color: #828282;
    }


    .searchP {
        border: 1px solid #E0E0E0;
        border-radius: 5px;
    }

    .searchP > input::placeholder {
        color: #828282;
    }

    .searchP > input {
        width: 100%;
        padding: 16px 9px;
        font-size: 17px;
        color: black;
        border: 0px;
        border-radius: 5px;
    }

    .items {
        display: grid;
        grid-template-columns: repeat(6,1fr);
        grid-gap: 10px;
    }

    .items div {
        border: 1px solid grey;
        border-radius: 7px;
        padding: 9px;
    }

    .items img {
        width: 100%;
        height: auto;
        box-sizing: border-box;
        border-radius: 11px;
    }

    </style>

</head>

<body>

    <nav>

        <p><img src="{{data.resources.[0].logo}}" height="44"></p>

        <div>
            <a href="/{{data.brand}}/gen/page/aboutPage/n">Sign In</a>
            <a href="/{{data.brand}}/gen/page/cartPage/n">Cart</a>
        </div>
    
    </nav>

    <div class="container">

        <p>
        {{#each data.schools}}
            <span>{{{this.name}}}</span>
        {{/each}}
        </p>

        <p class="searchP"><input type='text' placeholder='Type something here...' value=''></p>

        <p><span>Categories</span>
        {{#each data.categories}}
            <span>{{this}}</span>
        {{/each}}
        </p>

        <section class='items'>
            {{#each data.items}}
            <div>
                <img src="{{this.imageLink.[1]}}" height="300">
                <p> {{this.name}} </p>
                <p> PKR - {{this.sellingCost}} </p>
            </div>
            {{/each}}
        </section>
    
    </div>

    <div class="footer">
        <p> Footer Items </p>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>

    <script>


    </script>

</body>

</html>
