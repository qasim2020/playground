<html>

<head>

    <title>Edit Document</title>

    <style type="text/css">

        .container {
            max-width: 800px;
            display: flex;
            }

        form > * {
            display: block;
            margin-bottom: 10px;
            padding: 5px;
        }

        .d-none {
            display: none;
        }

        .imageUpload {
            display: block;
            border: 1px solid grey;
            padding: 5px;
            background: lightgrey;
        }
        .imageUpload > * {
            display: block;
            margin-bottom: 10px;
            padding: 5px;
        }

        .imageUpload > [type="file"] {
            border: 1px solid dimgrey;
            border-radius: 5px;
        }
        img {
            max-width: 50vw;
            max-height: 50vh;
        }
    </style>

</head>

<body>

    <nav>

        <a href="/{{data.brand}}/admin/page/showCollection/{{data.collection}}">{{data.collection}}</a>
    
    </nav>

    <div class="container">

        <form action="" method="post">

            <input name="modelName" type="text" class="d-none" value="{{data.collection}}">
            <input name="_id" type="text" class="d-none" value="{{data._id}}">

        {{#each data}}

            {{#if (matchValues this.type 'input')}}
                <label for="{{name}}">{{this.label}}</label>
                <input name="{{this.name}}" type="text" id="{{this.id}}" placeholder="" required="{{matchValues this.required required}}" value="{{this.value}}">
            {{/if}}

            {{#if (matchValues this.type 'imgURL')}}
                <div class="imageUpload" id="imgURL0">

                    {{#if this.value}}
                        <img counter='1' linkedTo="img" src="{{this.value}}" class="image">
                    {{else}}
                        <img counter='1' linkedTo="img" src="" class="image" onload="uploadCloudinary(this)">
                    {{/if}}

                    <label counter='1' for="img">Upload image:</label>
                    <input counter='1' type="file" id="img" name="img" accept="image/*" onchange="readURL(this)">

                    <p counter='1' class="error"></p>

                    <p counter='1' >After image upload, your image link is shown below! </p>
                    <label counter='1' for="{{this.name}}">{{this.label}}</label>
                    <input counter='1' name="{{this.name}}" type="text" id="{{this.id}}" placeholder="" required="{{matchValues this.required required}}" value="{{this.value}}" public_id="">

                </div>

                <button id="addImage" type="button">Add another Image</button>
            {{/if}}

        {{/each}}

        <button id="submitButton" type="submit">Submit</button>

        </form>

    </div>

    <script src="https://code.jquery.com/jquery-3.5.0.js"></script>

    <script>

        $('#addImage').on('click',function(e) {
            $('#imgURL0').clone().insertAfter('.imageUpload:eq(-1)');

            let tagsCount = $('.imageUpload').length;
            $('.imageUpload:eq(-1) > *').attr({counter: tagsCount});

            $(`img[counter=${tagsCount}]`).attr({src: ''});
            let prvsLabel = $(`label[counter=${tagsCount}]:eq(-1)`).attr('for');
            $(`label[counter=${tagsCount}]:eq(-1)`).attr('for',prvsLabel + tagsCount);
            $(`input[counter=${tagsCount}]:eq(-1)`).attr({
                name: prvsLabel + tagsCount,
                id: prvsLabel + tagsCount,
            });
        });

        let readURL = function (input) {
            let counter = $(input).attr('counter');
            let imgTag = `img[counter="${counter}"]`;
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $(imgTag).attr('src',e.target.result);
                };
                
                reader.readAsDataURL(input.files[0]);
            }
        };

        let uploadCloudinary = function(item) {
            let counter = $(item).attr('counter');
            let img = $(item).attr('src');

            let data = {
                img: img, 
                width:  $(item).width() * 2,
                height:  $(item).height() * 2
            };

            console.log(data);

            $.ajax({
              type: "POST",
              url: '/{{data.brand}}/admin/data/uploadCloudinary/n',
              data: data,
              success: (data) => {
                console.log(data);
                if (data.error) return c$(`.error[counter="${counter}"]`).html(data.error);
                $(`input[counter="${counter}"]`).attr({
                    value: data.url,
                });
              }
            });

        };


        $('form').on('submit',function(e) {
            e.preventDefault();
            // TODO: Make images collate into the FORM !!
            let inputForm = $(this).serializeArray();
            let imageObjects = inputForm.filter(val => /imgURL/gi.test(val.name)); // INPUT Tag
            let imageCSV = imageObjects.reduce((total,val) => {
                console.log(total,val);
                total = total + ',' + val.value; 
                // total = val.value + ',' + total ; 
                return total;
            },'');
            return console.log(inputForm,imageObjects,imageCSV.split(','));
            return console.log($(this).serializeArray());
            return console.log($(this).serialize());
            $.ajax({
              type: "POST",
              url: '/{{data.brand}}/admin/data/updateSequence/n',
              data: $(this).serialize(),
              success: (data) => {
                console.log('successful data sent'),
                console.log(data);
                $('#submitButton').html(data.error);
                window.location.href = '/{{data.brand}}/admin/page/showCollection/{{data.collection}}';
              }
            });
        });

        // label: name, type: String

    </script>

</body>

</html>
