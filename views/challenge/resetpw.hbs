<html>

<head>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Reset Password</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <style type="text/css">

        body {
            background: black;
        }

        .container {
          padding: 10px;
          padding-bottom: 1rem;
          position: absolute;
          left: 50%;
          top: 50%;
          transform: translate(-50%,-50%);
        }

        .display-2 {
          font-size: 3.5rem;
          font-weight: 300;
          margin-bottom: 3px;
          font-weight: 600;
          text-align: center;
          color: white;
          margin: 34px;
        }

        form {
            width: 333px;
            max-width: 98%;
            margin: auto;
            border: 1px solid #E0E0E0;
            box-sizing: border-box;
            border-radius: 5px;
            padding: 15px 15px 27px 15px;
            margin-top: 14px;
            background: white;
        }

        form > * {
            display: block;
            width: 100%;
            box-sizing: border-box;
            margin: 13px 0 0px 0;
        } 

        form > button.primary {
            padding: 13px;
            background: black;
            border: white;
            color: white;
            border-radius: 4px;
        }

        label {
            font-weight: 300;
        }

        label , h2 {
            color: #333333;
            font-size: 19px;
        }

        input, textarea {
            font-size: 19px;
            color: #333333;
            padding: 10px 13px;
            line-height: 1.5;
        }

        @media (max-width: 1200px) and (max-height: 1200px) {
            .container {
                position: relative;
                transform: none;
                left: 0%;
                top: 0%;
            }
        }
    </style>

</head>

<body>

    {{> challenge_menu}}

    <div class="container">
    
        <h1 class="display-2">Reset Password</h1>
        
        <form action="" method="post">

            <label for="password">Create new password</label>
            <input name="password" type="password" value="" required=true>

            <label for="v_password">Verify password</label>
            <input name="v_password" type="password" value="" required=true>

            <button class="primary" id="submitButton" type="submit">Change Password</button>

            <p><a href="/challenge/gen/page/signin/n">Sign In</a></p>
            <p><a href="/challenge/gen/page/signup/n">Sign Up</a></p>
        </form>

    </div>


    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>

    <script>

        $('form').on('submit',function(e) {
            e.preventDefault();
            return console.log('TODO: send password and show ok button');
            console.log($(this).serialize());
            $.ajax({
              type: "POST",
              url: '/{{data.brand}}/gen/data/checkSignIn/n',
              data: $(this).serialize(),
              success: (data) => {
                console.log(data);
                $('#submitButton').html(data.error || data.success);
                if (data.error) return 'Click on show collections to go home';
                window.location.href = `/${data.brand}/${data.role}/page/dashboard/n`;
              }
            });
        });

        // label: name, type: String

    </script>

</body>

</html>
