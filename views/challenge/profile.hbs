<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  <link href="https://fonts.googleapis.com/css2?family=Josefin+Sans:wght@300&display=swap" rel="stylesheet">

  <title></title>
  <style media="screen">
    body {
      background: black;
      display: flex;
      align-items: center;
      height: 100vh;
    }

    .container {
      width: 100%;
      padding-right: 15px;
      padding-left: 15px;
      margin-right: auto;
      margin-left: auto;
      padding-top: 0;
      padding-bottom: 15px;

      max-width: 900px;
    }

    .block {
      max-width: 400px;
    }

    input {
      border: 0px;
      border-bottom: 1px solid lightgray;
      padding: 1rem 1rem 0.5rem 1rem;
      display: block;
      width: 100%;
      margin-bottom: 4px;
      color: black;
      font-size: 1.3rem;
      font-weight: 100;
    }

    form .btn-submit {
      color: black;
      background-color: white;
      border-color: white;
      border-radius: 0%;
      font-size: 1.3rem;
    }

    .light-font {
        color: white;
    }

    @media (max-width: 576px) {
      .container {
        max-width: 100%;
      }
    }

    @media (max-height: 630px) {
      body {
        align-items: flex-start;
        height: auto;
      }
    }
  </style>
</head>

<body>

  {{> challenge_menu}}
  <div class="container">

    <div class="card special">
      <h1>Hey üëã, {{data.name}} !</h1>
      {{#if msg}}
      <p>{{msg}}</p>
      {{else}}
      <p>Make necessary edits and hit Save below. Happy Changing.</p>
      {{/if}}
      {{#if data.verified}}
      <p class="text-success">Your email is verified. Good Luck. üëç</p>
      {{else}}
      <p class="text-info">Your email verification is pending.</p>
      <button type="button" class="btn btn-info inline-block" name="button">Resend Verification Email</button>
      {{/if}}
    </div>
    <form class="block" action="/profile" method="post">
      <input type="text" name="" value="{{data.name}}">
      <input type="text" name="" value="{{data.email}}">
      <input type="text" name="" value="Old Password">
      <input type="text" name="" value="New Password">
      <input type="text" name="" value="Confirm Password">
      <button class="btn btn-submit" type="submit" name="button">Save</button>
    </form>

  </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

  <script>

      let myFuncs = {

          sendVerificationEmail: function() {
              $('.btn-info').html("Sending email...");
              $.ajax({
                  type: "GET",
                  url: '/{{data.brand}}/gen/data/sendVerificationEmail/n',
                  success: msg => {
                      console.log(msg);
                      $('.btn-info').html("Email sent!");
                  }
              }).fail( e => {
                  console.log(e.responseText);
                  $('.btn-info').html(e.responseText);
              });
          }

      };
  
      $('.btn-info').on('click',myFuncs.sendVerificationEmail);
  
  </script>

</body>

</html>
