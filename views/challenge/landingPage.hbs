<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  <style media="screen">
    body {
      background-color: black;
    }

    .container {
      padding: 10px;
      padding-bottom: 1rem;
      position: absolute;
      left: 50%;
      top: 50%;
      transform: translate(-50%,-50%);
    }

    .display-2 {
      font-size: 3.5rem;
      font-weight: 300;
      line-height: 1.5;
      margin-bottom: 3px;
      background: white;
      padding: 20px;
      color: black;
      font-weight: 600;
      border: 1px solid white;
      border-radius: 0%;
    }

    .display-2 span {
      font-weight: 200;
    }

    .display-2 .btn-bold {
      font-size: 1rem;
      padding: 11px 9px;
      border: 2px solid black;
      display: inline-block;
      background: black;
      color: white;
      font-weight: 400;
      white-space: nowrap;
    }

    .display-2 .btn-normal {
      font-size: 1rem;
      padding: 11px 9px;
      border: 2px solid black;
      display: inline-block;
      background: white;
      color: black;
      font-weight: 400;
      display: block;
      width: fit-content;
      margin-top: 4px;
    }

    .grid {
      display: grid;
      grid-template-rows: auto;
      grid-template-columns: repeat(auto-fill, minmax(175px, 1fr));
      grid-gap: 3px;
    }

    .card {
      padding: 1.5rem;
      border: 1px solid rgba(0, 0, 0, 0.07);
      border-radius: 0;
      font-weight: 100;
    }

    .card:hover {
      cursor: pointer;
      opacity: 0.6;
    }

    .card > img {
      vertical-align: middle;
      border-style: none;
      max-width: 92px;
      margin-bottom: 23px;
      margin-left: auto;
      margin-right: auto;
      max-height: 87px;
    }

    .card > h1 {
      font-size: 1.2rem;
      margin-bottom: auto;
    }

    .btn-payment {
      background-color: lightcoral;
      border-color: lightcoral;
      padding: 5px 13px;
      color: white;
      font-weight: bold;
      box-shadow: none;
      display: block;
    }

    .modal li {
      font-size: 1.2rem;
      margin: 0;
      margin: auto;
      margin-left: -22px;
      line-height: 1.7;
      color: slategrey;
    }

    .modal h5 {
      font-weight: bold;
      font-size: 2.25rem;
    }

    .modal .close {
      color: red;
      opacity: 1;
      z-index: 10;
      padding-top: 28px;
      padding-right: 22px;
    }

    input {
      border: 0px;
      padding: 9px 8px;
      width: 100%;
      box-sizing: border-box;
      background: #f0f0f0;
    }

    li>span {
      background: #ededed;
      color: black;
      padding: 0 6px;
      display: inline-block;
    }

    .badge {
      margin-right: auto;
      background: orangered;
      color: white;
      margin-top: 10px;
    }

    .d-xx-none {
      display: none;
    }

    @media (max-width: 1200px) and (max-height: 1200px) {
        .container {
            position: relative;
            transform: none;
            left: 0%;
            top: 0%;
        }
    }

     @media (max-width: 1200px) {
     .container {
       max-width: 100%;
      }
    }

    @media (max-width: 450px) {

      .display-2 {
        font-size: 6vh;
      }

      .d-xx-none {
        display: inline-block;
      }
    }
  </style>
  <title>Hello, world!</title>
</head>

<body>

  {{> challenge_menu}}

  <div class="container">

    <h1 class="display-2">
      Start <span>30 days challenge</span> to gain back control <br class="d-xx-none"> of your <br class="d-xx-none"> Life ! <br>
      {{#if data.sessionExists}}
          <a class="btn-bold" href="/challenge/auth/page/challenges/n">Show my Challenges</a>
      {{else}}
          <a class="btn-bold" href="/challenge/gen/page/signin/n?nextPage=challenges&nextPageInput=n">Sign In</a>
          <a class="btn-normal" href="/challenge/gen/page/signup/n">First Day here ?</a>
      {{/if}}
    </h1>

    <div class="grid">

        {{#each data.types}}
        <div class="card" data-toggle="" data-target="#staticBackdrop">
            <img src="/challenge/types/{{this.slug}}.svg" alt="{{this.slug}}">
            <h1>{{this.name}}</h1>
            <small class="badge">{{this.cost}} USD</small>
        </div>
        {{/each}}

    </div>

  </div>

  <style media="screen">
    .overlay {
      position: fixed;
      top: 0;
      left: 0;
      height: 100vh;
      width: 100vw;
      display: flex;
      align-items: center;
      justify-content: center;
      background: white;
      font-weight: bold;
      flex-direction: column;
    }
  </style>

  <div class="overlay d-none">
    <p></p>
  </div>

  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
  <script src="https://js.stripe.com/v3/"></script>

  <script type="text/javascript">

    console.log('{{data.sessionExists}} < Session Exists ?');

    let startChallenge = function() {
        if ({{data.sessionExists}} == true) return window.location.assign('/challenge/auth/page/openChallenge/cardName');
        return window.location.assign('/challenge/gen/page/signin/n?nextPage=openChallenge&nextPageInput=cardName');
    };
  
    $('.card').on('click', startChallenge);

  </script>

</body>

</html>
