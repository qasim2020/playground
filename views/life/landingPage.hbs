    .left-part > .selector.pending {
	color: brown;
    }

    .left-part > .selector {
        margin: 0;
        padding: 10px 0;
        padding-left: 18px;
        font-size: 16px;
        color: #4F4F4F;
        font-family: 'Roboto';
        font-weight: 300;
        display: block;
    }

    .left-part > .selector:hover {
        background: whitesmoke;
    }

    .left-part > .selector.active {
        color: orange;
    }

    .left-part > .selector.active::after {
        content: "   ¬ª"
    }

    .left-part > a {
        text-decoration: none;
        color: inherit;
        display: block;
    }

    .left-part > p > input {
        width: 100%;
        padding: 18px;
        box-sizing: border-box;
        border: 1px solid #4F4F4F;
        font-size: 16px;
        color: #4F4F4F;
        font-family: 'Roboto';
        font-weight: 300;
    }

    .muted {
      font-family: Roboto;
      font-style: normal;
      font-weight: normal;
      font-size: 20px;
