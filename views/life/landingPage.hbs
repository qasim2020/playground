    .muted > a {
      font-style: normal;
      color: black;
      font-weight: lighter;
    }

    .content {
        width: 100%;
        box-sizing: border-box;
        padding: 0 20px;
        height: fit-content;
    }

    .content > .blogs {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    }

    .card {
        font-size: 80%;
        min-width: 150px;
        padding: 15px;
        box-sizing: border-box;
        word-break: break-word;
        background: whitesmoke;
        margin: 5px;
        border-radius: 5px;
        font-family: "Roboto";
        display: flex;
        flex-direction: column;

    }

    .letter {
        border: 1px dashed orange;
    }

    .card:hover {
        background: white;
        cursor: pointer;
    }

    .card > h4 {
        color: #4F4F4F;
        margin: 12px 0;
    }

    .card > h1 {
        margin-bottom: auto;
        color: #4F4F4F;
        background: #219653;
        box-sizing: border-box;
        transform: rotate( -1deg );
        color: white;
        padding: 8px;
    }

    .letter > h1 {
        background: orange;
    }

    .card > h5 {
        padding: 2px 4px;
        margin-top: 22px;
        margin-bottom: 0px;
        font-weight: 300;
    }

    .card > p {
        padding: 7px 4px 2px 4px;
        margin-top: 0;
        font-weight: bold;
        font-size: 14px;
        color: #4F4F4F;
    }

    .right-part {
