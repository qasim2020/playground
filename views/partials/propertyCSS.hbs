                line-height: 1.5;
            }

            .msgBox > button {
                background: lightblue;
                padding: 4px 8px;
                border: 2px solid black;
                font-size: 16px;
                
            }
            .d-none {
                display: none;
            }

            .filters > span.active {

                background: darkblue;
                color: white;
            }
            .firstBox {
                border-top: 1px dashed;
                border-bottom: 1px dashed;
                    padding-bottom: 10px;
            }

            .note {
                font-size: 12px;
                line-height: 1.5;
                padding: 0 5px;
                color: green;
