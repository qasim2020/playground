    <title>{{title}}</title>
    <style>
    
            body {
                        font-family: "Roboto", sans-serif;
                padding: 0;
                margin: 0;
            }

            body > * {
                padding: 0 10px;
            }
                

            nav {
                padding: 0 14px;
                display: flex;
                justify-content: space-between;
            }

            .locations {
                line-height: 1.5;
                color: darkslategrey;
            }

            .box-hdg {
                font-size: 12px;
                font-weight: bold;
                padding-left: 7px;
                margin-bottom: 7px;
            }

            .filters > span {
                padding: 2px 8px;
                border: 1px solid lightcyan;
                display: inline-block;
                background: lightblue;
                border-radius: 5px;
                font-size: 14px;
                margin-bottom: 5px;
            }

            button.fixed {
                position: fixed;
                right: 4px;
                bottom: 4px;
                background: lightblue;
                border: lightblue;
                padding: 8px 8px;
                color: darkslategray;
                font-weight: bold;
                border: 2px solid black;
                color: black;
            }

