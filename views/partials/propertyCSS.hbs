                line-height: 1.5;
                font-weight: bold;
                box-shadow: 0 0 1px darkgoldenrod;
            }

            .card.select {
                background: darkblue;
                color: white;
            }

            .msgBox {
                position: fixed;
                z-index: 100;
                background: white;
                top: 0;
                left: 0;
                width: 100vw;
                height: 100vh;
            }

            .msgBox > textarea {
                width: 90%;
                font-size: 16px;
                border: 0px;
                color: darkslategray;
                font-weight: bold;
                font-family: inherit;
