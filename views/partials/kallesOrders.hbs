<div class="actions-page d-none">


    <div class="nav">
    
        <p>
            
            <span class="link" onclick="openLayer('.kallesReceipt, .actions-page', '.layerOne')">Dashboard</span>
            /
            <span class="link" onclick="openLayer('.actions-page', '.kallesReceipt')">Order</span>
            /
            <span class="black">Actions</span>
        
        </p>

        <div class="actions">

            <button class="btn" >Cancel Order</button>
            <button class="btn" >Edit Order</button>
        
        </div>
    
    </div>

    <div>
    
        <div class="section">

            <h5>SHARE RECEIPT</h5>

            <button id="send_receipt_to_shop" >Send Receipt to Shop Email</button>
            <button id="send_receipt_to_customer" >Send Receipt to Customer Email</button>
            <button onclick="sendReceiptToSlack('{{data.brand.slack}}')">Send Receipt to Slack Channel</button>

        </div>
        <div class="section">

            <h5>SEND A NOTE</h5>

            <button onclick="createLayer('noteToShop')">Send Special Note to Shop</button>
            <button onclick="createLayer('noteToCustomer')">Send Special Note to Customer</button>

        </div>
        <div class="section">

            <h5>TEST ALARM</h5>

            <button onclick="generateAlarm('newOrder')">Generate Alarm</button>

        </div>

        <div class="section">

            <h5>UPDATE ORDER STATUS</h5>
            <button class="status" onclick="setOrderStatus('processing')">Processing</button>
            <button class="status" onclick="setOrderStatus('shipped')">Shipped</button>
            <button class="status" onclick="setOrderStatus('delivered')">Delivered</button>
            <button class="status" onclick="setOrderStatus('returned')">Returned</button>
            <button class="status" onclick="setOrderStatus('cancelled')">Cancelled</button>
        
        </div>

        <div class="section">

            <h5>ADD PAYMENT DETAILS</h5>

            <button class="payment" onclick="addPaymentDetails('COD')">Cash On Delivery (COD)</button>
            <button class="payment" onclick="addPaymentDetails('bank_tfr')">Bank Transfer</button>
        
        </div>
    
    </div>

</div>
