.d-none {
    display: none !important;
}

nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.svg>svg {
    margin-top: 4px;
}

.svg>.content {
    position: absolute;
    left: 0;
    padding: 14px 10px;
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    width: 100%;
    box-sizing: border-box;
    top: 48px;
    background: #F2F2F2;
    border-bottom: 1px dashed black;
}

.svg>svg:nth-child(1) {
    display: none;
}

.svg>svg:nth-child(2) {
    display: inline-block;
    border: 1px solid black;
    box-sizing: border-box;
}

.close.svg>.content {
    display: none;
}

.close.svg>svg:nth-child(2) {
    display: none;
}

.close.svg>svg:nth-child(1) {
    display: inline-block;
    box-sizing: border-box;
}

.sliders>.slide {
    display: none;
}

.sliders>.slide.active {
    display: block;
}
