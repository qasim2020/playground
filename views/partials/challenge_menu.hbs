  }

  .btn-submit {
    color: #fff;
    background-color: #f0807f;
    border-color: #f0807f;
  }

  .btn:hover {
    opacity: 0.6;
  }

  .btn-close {
    color: #f0807e;
    background-color: #fdf4f4;
    border-color: #fdf4f4;
  }

  .menu-btn.btn,
