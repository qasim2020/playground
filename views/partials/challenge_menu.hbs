    color: dimgray;
  }

  .menu .card:hover {
    background: lightcoral;
    cursor: pointer;
  }

  .menu .card:hover h5,
  .menu .card:hover small {
    color: white;
  }

  .menu button {
    /* display: inline-block; */
    margin-top: 10px;
    margin-left: auto;
    margin-right: auto;

    width: fit-content;
  }

  .menu a {
    text-decoration: none;
    color: black;
    font-weight: 200;
    padding: 0 15px;
  }

