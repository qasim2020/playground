    background: white;
    color: black;
    max-width: 800px;
  }

  .card.special h1 {
    font-size: 2.5rem;
    font-weight: 100;
  }

  .card.special p {
    font-size: 1.3rem;
    font-weight: 200;
  }

  .menu h1 {
    font-size: 2.5rem;
